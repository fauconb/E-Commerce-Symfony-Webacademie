{% extends 'base.html.twig' %}

{% block body %}
    <h1>Article list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Descmin</th>
                <th>Desclong</th>
                <th>Reference</th>
                <th>Linkedto</th>
                <th>Stock</th>
                <th>Weight</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('admin_article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                <td>{{ article.name }}</td>
                <td>{{ article.price }}</td>
                <td>{{ article.descMin }}</td>
                <td>{{ article.descLong }}</td>
                <td>{{ article.reference }}</td>
                <td>{{ article.linkedTo }}</td>
                <td>{{ article.stock }}</td>
                <td>{{ article.weight }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_article_show', { 'id': article.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_article_edit', { 'id': article.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_article_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
