{% extends 'AdminBundle:layout:base-layout.html.twig' %}
{% block page_title %}Show Categorie{% endblock %}

{% block page_subtitle %}Vue de la catégorie{% endblock %}

{% block page_content %}
    <h1>Categorie</h1>

    <div class="col-md-offset-1 col-md-10">
        <div class="box box-primary">
            <div class="box-body box-profile">

                <h3 class="profile-username text-center">{{ categorie.name }}</h3>

                <p class="text-muted text-center">
                    Principale catégorie :
                    {% if categorie.parent == null %}
                        Oui
                    {% else %}
                        Non
                    {% endif %}
                </p>
                <div class="box-body">
                    <p><strong>ID</strong>
                        <span class="pull-right">{{ categorie.id }}</span>
                    </p>
                    <hr>

                    <p><strong>DescMin</strong>
                        <span class="pull-right">{{ categorie.descMin }}</span>
                    </p>
                    <hr>

                    <p><strong>DescLong</strong>
                        <span class="pull-right">{{ categorie.descLong }}</span>
                    </p>
                    <hr>
                </div>

                <a class="btn btn-primary" href="{{ path('admin_categorie_index') }}">Back to the list</a>

                <a class="btn btn-warning" href="{{ path('admin_categorie_edit', { 'id': categorie.id }) }}">Edit</a>
                <hr>
                {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </div>

        </div>
    </div>
{% endblock %}
