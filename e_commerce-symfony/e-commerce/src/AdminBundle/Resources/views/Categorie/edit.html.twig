{% extends 'AdminBundle:layout:base-layout.html.twig' %}
{% block page_title %}Edit Categorie{% endblock %}

{% block page_subtitle %}Edition de la catégorie{% endblock %}

{% block page_content %}
    <div class="container">
        <div class="raw">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Crée une catégorie</h3>
                </div>
                {{ form_start(edit_form) }}
                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(edit_form.name) }}
                        {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control', 'placeholder' : 'Entrez le nom de la catégorie'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.descMin) }}
                        {{ form_widget(edit_form.descMin, { 'attr': {'class': 'form-control', 'placeholder' : 'Description simplifier'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.descLong) }}
                        {{ form_widget(edit_form.descLong, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.parent) }}
                        {{ form_widget(edit_form.parent, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Crée la catégorie</button>
                </div>
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
{% endblock %}
