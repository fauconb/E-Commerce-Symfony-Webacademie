{% extends "AdminBundle::layout.html.twig" %}

{% block page_title %}Tax{% endblock %}

{% block page_subtitle %}Création d'une taxe{% endblock %}

{% block page_content %}
    <div class="container">
        <div class="raw">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Crée une taxe</h3>
                </div>
                {{ form_start(form) }}
                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder' : 'Entrez le nom de la taxe'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.rate) }}
                        {{ form_widget(form.rate, { 'attr': {'class': 'form-control', 'placeholder' : "Entrez le pourcentage de la taxe"} }) }}
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Crée la taxe</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock page_content %}

